{% extends 'base.html.twig' %}

{% block body %}

	<div class="content">
		<div class="line">
			<div>{{ ad.title }}</div>

			<div>
				<ion-icon class="icon" name="mail-sharp"></ion-icon>
				Contacter
			</div>
		</div>

		<div class="line">
			<div>
				{{ ad.city }}
			</div>

			<div>
				<ion-icon class="icon" name="call-sharp"></ion-icon>
				06 06 06 06 06
			</div>
		</div>
	</div>

	<div class="content">
		<div class="line2">
			<img class="photo" src="{{ ad.image }}" alt="">
		</div>

		<div>{{ ad.content }}</div>
	</div>

	<div class="content">
		<a href="{{ path('ad_delete', {'id': ad.id}) }}" onclick="return confirm('Are you sure you want to delete this advertisement?')">Delete</a>
	</div>

{% endblock %}
