{% extends 'base.html.twig' %}

{% block body %}

<div class="content">
    {% include "_partials/_region.html.twig" %}
    <select name="sort" onchange="handleSortChange(this)">
        <option value="recent" {% if selectedSortOption == 'recent' %}selected{% endif %}>Plus récent</option>
        <option value="cheapest" {% if selectedSortOption == 'cheapest' %}selected{% endif %}>Moins cher</option>
    </select>

    <a class="category" href="#">Immobilier</a>
    <a class="category" href="#">Véhicules</a>

</div>

{% for ad in ads %}
    <a href="{{ path('ad_show', {'id': ad.id}) }}" class="card">
            <div>{{ ad.title }}</div>
            {# <div>{{ ad.price }} euros</div> #}
        {% if ad.imageFilename %}
            <img class="photo" src="{{ asset('uploads/images/' ~ ad.imageFilename) }}" alt="Photo annonce">
        {% else %}
            <img class="photo" src="{{ asset('path/to/default/image.jpg') }}" alt="Photo annonce">
        {% endif %}
        {{ ad.region }}
    </a>
{% endfor %}

{% endblock %}
